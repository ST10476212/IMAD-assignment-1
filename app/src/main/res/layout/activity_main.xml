<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/healthyfood"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/start"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginBottom="164dp"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset2"
        tools:text="Start" />

    <Button
        android:id="@+id/reset2"
        android:layout_width="227dp"
        android:layout_height="0dp"
        android:layout_marginBottom="117dp"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer1" />

    <EditText
        android:id="@+id/inputdate1"
        android:layout_width="212dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="Enter time of day"
        android:inputType="text"
        android:textColor="#2C2323"
        app:layout_constraintBottom_toTopOf="@+id/answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/answer1"
        android:layout_width="187dp"
        android:layout_height="0dp"
        android:layout_marginBottom="38dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/reset2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputdate1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="202dp"
        android:layout_height="0dp"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="50dp"
        android:text="Meal Suggestions"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/inputdate1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

